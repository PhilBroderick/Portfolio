@page
@model Portfolio.Web.Pages.Admin.AddBlog

@{
}

<h2>Create Blog post</h2>
<div class="d-flex">
    <form method="post">
        <div class="d-flex flex-column">
            <label>Title</label>
            <input asp-for="CreateBlogRequest.Title" />
        </div>
        <div class="d-flex flex-column">
            <label>Description</label>
            <textarea asp-for="CreateBlogRequest.Description" rows="3"></textarea>
        </div>
        <div class="d-flex flex-column">
            <label>Content</label>
            <textarea asp-for="CreateBlogRequest.Content" rows="10"></textarea>
        </div>
        <div>
            <input type="submit" value="Create blog" />
        </div>
    </form>
</div>