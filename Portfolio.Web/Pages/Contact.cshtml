@page
@model Portfolio.Pages.Contact

@{
}

<div class="col-sm-2 col-md-2 col-lg-3"></div>
<div class="col-sm-10 col-md-10 col-lg-9">
    <h1>Contact</h1>
    <p>Get in touch!</p>
    <div class="d-flex">
        <form method="post" class="col-md-6 pl-0">
            <div class="d-flex flex-column">
                <label>Your Email:</label>
                <input asp-for="ContactSubmission.Email" class="contact-input">
            </div>
            <div class="d-flex flex-column">
                <label>Your Message:</label>
                <textarea asp-for="ContactSubmission.Message" rows="6" class="contact-input"></textarea>
            </div>
            <div>
                <input type="submit" value="Send message"/>
            </div>
        </form>
    </div>
</div>