<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <script src="https://kit.fontawesome.com/9e3903baeb.js" crossorigin="anonymous"></script>
</head>
<body class="d-flex">
<div class="wrapper">
    <nav class="sidebar">
        <header class="sidebar-header">
            <img src="https://pbportfolio.blob.core.windows.net/images/test_avatar.jpg"/>
            <h2>Phil Broderick</h2>
            <span>Software Developer</span>
        </header>
        <div class="menu-container d-flex justify-content-between flex-column">
            <ul class="list-unstyled menu-items">
                <li class="active menu-item">
                    <hr />
                    <a asp-area="" asp-page="/Index" asp-route-title="">Home</a>
                </li>
                <li class="active menu-item">
                    <hr/>
                    <a asp-area="" asp-page="/Blog" asp-route-title="">Blog</a>
                </li>
                <li class="menu-item">
                    <hr/>
                    <a asp-area="" asp-page="/Contact">Contact</a>
                </li>
            </ul>
            <div>
                <ul class="list-unstyled social-links d-flex">
                <li>
                    <a href="https://www.linkedin.com/in/phil-broderick-ba0b49142/">
                        <i class="fab fa-linkedin-in fa-2x"></i>
                    </a>
                </li>
                <li>
                    <a href="https://github.com/PhilBroderick">
                        <i class="fab fa-github fa-2x"></i>
                    </a>
                </li>
            </ul>
                <div class="container d-flex justify-content-center text-center">
                    <p>&copy; @DateTime.Now.Year -
                        Phil Broderick
                        Made with @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription</p>
                </div>
            </div>
        </div>
    </nav>
</div>
<div class="main-div">
    <main role="main" class="pb-3 pt-5 row">
        @Html.Partial("_StatusMessages")
            @RenderBody()
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>